generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id          Int      @id @default(autoincrement())
  ean         String?
  codigo      String?
  descricao   String
  preco       Float
  imagens     String[] // array de strings para armazenar m√∫ltiplas URLs
}
